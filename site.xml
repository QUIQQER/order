<?xml version="1.0" encoding="UTF-8"?>
<site>

    <types>
        <type type="types/orderingProcess" icon="fa fa-shopping-cart">
            <locale group="quiqqer/order" var="admin.types.orderingProcess"/>
            <desc>
                <locale group="quiqqer/order" var="admin.types.orderingProcess.desc"/>
            </desc>

            <attributes>
                <attribute>quiqqer.order.checkoutType</attribute>
                <attribute>quiqqer.order.nobody.intro.title</attribute>
                <attribute>quiqqer.order.nobody.intro.desc</attribute>
            </attributes>

            <settings>
                <category name="order">
                    <settings>
                        <title>
                            <locale group="quiqqer/order" var="order.siteSettings"/>
                        </title>

                        <select conf="quiqqer.order.checkoutType">
                            <text>
                                <locale group="quiqqer/order" var="quiqqer.order.checkoutType"/>
                            </text>
                            <option value="one-page">
                                <locale group="quiqqer/order" var="quiqqer.order.checkoutType.one.page"/>
                            </option>
                            <option value="step-by-step">
                                <locale group="quiqqer/order" var="quiqqer.order.checkoutType.step.by.step"/>
                            </option>
                        </select>

                        <input conf="quiqqer.order.nobody.intro.title" type="text">
                            <text>
                                <locale group="quiqqer/order"
                                        var="quiqqer.order.nobodyIntroText"/>
                            </text>
                            <description>
                                <locale group="quiqqer/order"
                                        var="quiqqer.order.nobodyIntroText.desc"/>
                            </description>
                        </input>
                        <input conf="quiqqer.order.nobody.intro.desc" type="text" data-qui="controls/editors/Input">
                            <text>
                                <locale group="quiqqer/order"
                                        var="quiqqer.order.nobodyIntroDesc"/>
                            </text>
                            <description>
                                <locale group="quiqqer/order"
                                        var="quiqqer.order.nobodyIntroDesc.desc"/>
                            </description>
                        </input>

                    </settings>
                </category>
            </settings>
        </type>

        <type type="types/shoppingCart" icon="fa fa-shopping-basket">
            <locale group="quiqqer/order" var="admin.types.shoppingCart"/>
            <desc>
                <locale group="quiqqer/order" var="admin.types.shoppingCart.desc"/>
            </desc>
        </type>
    </types>

</site>
